@model NewDaySameStuff.Models.Post

@{ 
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-group">
    <h4>Post</h4>
    <hr />
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.ProfilePicture, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProfilePicture)
            @Html.ValidationMessageFor(model => model.ProfilePicture)
        </div>
    </div>
    <h3>Choose file</h3>
    <form asp-action="Create" asp-controller="Post" method="post" enctype="multipart/form-data">
        <input type="file" name="uploadedFile" /><br>
        @*<input type="submit" value="Upload" />*@
    </form>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
 </div>
}