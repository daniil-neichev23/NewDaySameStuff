@model PostViewModel

    @{
        ViewBag.Title = "Create";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <form enctype="multipart/form-data" asp-controller="post" asp-action="create" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="ProfilePicture" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ProfilePicture" class="form-control" placeholder="Name" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input" />
                    <label class="custom-file-label">Choose file</label>
                </div>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>